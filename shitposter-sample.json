{
    "screenshot": {
        "interval": 5,
        "save_path": "~/shitposter_data/screenshots",
        "max_stored": 1000,
        "method": "mss",
        "monitor": "primary"  
    },
    "ollama": {
        "model": "tinyllama",
        "base_url": "http://localhost:11434",
        "max_context_length": 10,
        "confidence_threshold": 0.7,
        "interpretation_prompt": "in a few words, what is this image about?"
    },
    "tesseract": {
        "lang": "eng",
        "psm": 11,
        "output_path": "~/shitposter_data/ocr"
    },
    "monitoring": {
        "update_interval": 2,
        "log_level": "INFO",
        "save_analysis": true,
        "analysis_dir": "~/shitposter_data/analysis"
    },
    "social_media": {
        "chrome_debug_url": "http://localhost:9222",
        "default_platforms": ["twitter", "reddit"],
        "twitter": {
            "auto_hashtags": true,
            "max_media_files": 4
        },
        "reddit": {
            "default_subreddit": "test",
            "post_type": "text"
        },
        "linkedin": {
            "include_hashtags": true
        },
        "facebook": {
            "privacy": "public"
        }
    }
}